#:kivy 1.0.9

#:include menu.kv
#:include backcreatebuttonswidget.kv
#:include submenu.kv
#:include elementslist.kv
#:include itemslist.kv
#:include setslist.kv

<CreateIngredientLayout>
    id: create_ingredient_layout
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'Create an ingredient'
        font_size: 30
        size_hint: (1, .3)

    GridLayout:
        rows: 1
        cols: 2
        size_hint: (1, .1)

        Label:
            text: 'Ingredient name'
            font_size: 20

        TextInput:
            id: name_ingredient
            multiline: False

    GridLayout:
        rows: 2
        cols: 2

    GridLayout:
        rows: 1
        cols: 2
        size_hint: (1, .2)
        padding: 10
        spacing: 10

        Button:
            id: back
            text: "Back"
            font_size: 30
            on_press: root.go_back_sub_menu()

        Button:
            id: create
            text: "Create"
            font_size: 30
            on_press: root.create(name_ingredient.text)

<DeleteIngredientLayout>
    id: create_ingredient_layout
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'Create an ingredient'
        font_size: 30
        size_hint: (1, .3)


<CreateMealLayout>
    id: create_meal_layout
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'Create a meal'
        font_size: 30
        size_hint: (1, .3)

    GridLayout:
        rows: 1
        cols: 2

        size_hint: (1, .1)
        Label:
            text: 'Meal name'
            font_size: 20

        TextInput:
            id: name_meal
            multiline: False

    GridLayout:
        rows: 1
        cols: 1

    GridLayout:
        rows: 2
        cols: 2
        size_hint: (1, .2)
        spacing: 10

        Button:
            id: back
            text: "Back"
            font_size: 30
            on_press: root.go_back_sub_menu()

        Button:
            id: create
            text: "Create"
            font_size: 30
            on_press: root.create(name_meal.text)


<AddRecipeLayout>
    id: create_recipe_layout
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'Edit recipe'
        font_size: 30
        size_hint: (1, .3)

    GridLayout:
        rows: 1
        cols: 2

        size_hint: (1, .1)
        Label:
            text: 'Ingredient name'
            font_size: 20

        TextInput:
            id: name_ingredient
            multiline: False

    GridLayout:
        rows: 1
        cols: 2

        size_hint: (1, .1)
        Label:
            text: 'Quantity (grams)'
            font_size: 20

        TextInput:
            id: quantity
            multiline: False

    GridLayout:
        id: ings_list
        rows: 1
        cols: 2

        Label:
            text: 'Ingredient'
        Label:
            text: 'Quantity'

    GridLayout:
        rows: 2
        cols: 2
        size_hint: (1, .2)
        spacing: 10

        Button:
            id: back
            text: "Back"
            font_size: 30
            on_press: root.go_back_sub_menu()

        Button:
            id: add
            text: "Add"
            font_size: 30
            on_press: root.create(name_ingredient.text, quantity.text)
