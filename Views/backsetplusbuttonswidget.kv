#:kivy 1.0.9

<BackSetPlusButtonsWidget>:
    padding: 10
    spacing: 10
    cols: 3
    rows: 1
    size_hint: (1, .2)

    Button:
        id: back
        text: 'Back'
        font_size: 20
        on_press: root.parent.get_widget(root.parent, "elements_list").go_back_and_delete_temp()

    Button:
        id: add
        text: '+'
        font_size: 30
        on_press: root.parent.get_widget(root.parent, "elements_list").add_set_meal_field()

    Button:
        id: set
        text: 'Set'
        font_size: 20
        on_press: root.parent.get_widget(root.parent, "elements_list").set_item()
