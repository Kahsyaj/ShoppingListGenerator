#:kivy 1.0.9


<Menu>
    id: menu
    orientation: 'vertical'

    Label:
        text: 'ShoppingListGenerator'
        font_size: 35
        size_hint: (1, .5)

    Label:
        text: 'Which category would you like to browse ?'
        font_size: 15
        size_hint: (1, .2)

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Button:
            id: ingredient
            text: "Ingredient"
            font_size: 30
            on_press: root.display_sub_menu(self.text)

        Button:
            id: meal
            text: "Meal"
            font_size: 30
            on_press: root.display_sub_menu(self.text)

        Button:
            id: shoppinglist
            text: "Shopping list"
            font_size: 30
            on_press: root.display_sub_menu(self.text)

        Button:
            id: quit
            text: "Quit"
            font_size: 30
            on_press: root.display_sub_menu(self.text)

<SubMenu>
    id: sub_menu
    orientation: 'vertical'

    Label:
        text: 'Select an action'
        font_size: 15
        size_hint: (1, .3)

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Button:
            id: create
            text: "Create " + root.category
            font_size: 30
            on_press: root.display_input_menu(self.text)

        Button:
            id: set
            text: "Set " + root.category
            font_size: 30
            on_press: root.display_input_menu(self.text)

        Button:
            id: delete
            text: "Delete " + root.category
            font_size: 30
            on_press: root.display_input_menu(self.text)

        Button:
            id: display
            text: "Display " + root.category + 's'
            font_size: 30
            on_press: root.display_input_menu(self.text)

        Button:
            id: back
            text: 'Back'
            font_size: 30
